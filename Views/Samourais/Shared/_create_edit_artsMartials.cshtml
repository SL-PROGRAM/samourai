@model samsam.Models.SamouraiVM


    <div class="form-group">
        @Html.LabelFor(model => model.Samourai.ArtMartials, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.ListBoxFor(model => model.IdArtMartials, Model.ArtMartials.Select(x => new SelectListItem()
                             {
                                             Text = x.Nom,
                                 Value = x.Id.ToString()
                                         }),
                                         new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Samourai.Nom, "", new { @class = "text-danger" })


        </div>
    </div>

